<?xml version="1.0"?>
<ruleset name="GunitaPlugin">
	<!-- See https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<!-- See https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards -->
	<!-- See https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/wiki -->
	<!-- See https://github.com/wimg/PHPCompatibility -->

	<!-- Ignore specific files and directories -->
	<exclude-pattern>node_modules</exclude-pattern>
	<exclude-pattern>vendor</exclude-pattern>
	<exclude-pattern>build/</exclude-pattern>

	<!-- Set a description for this ruleset. -->
	<description>A custom set of code standard rules to check for WordPress plugin.</description>

	<!-- Pass some flags to PHPCS:
		 p flag: Show progress of the run.
		 s flag: Show sniff codes in all reports.
		 v flag: Print verbose output.
		 n flag: Do not print warnings.
	-->
	<arg value="psv" />

	<!-- Only check the PHP files. -->
	<arg name="extensions" value="php" />

	<!-- Files and directories to lint -->
	<file>.</file>

	<!-- Include the WordPress ruleset. -->
	<rule ref="WordPress">
		<exclude name="Universal.Arrays.DisallowShortArraySyntax.Found" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
	</rule>

	<!-- Use square bracket array. -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />

	<!-- Verify that the text_domain is set to the desired text-domain.
		 Multiple valid text domains can be provided as element nodes. -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="gunita-plugin"/>
			</property>
		</properties>
	</rule>

	<!-- Disable rule for type hint. -->
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude name="Squiz.Commenting.FunctionComment.InvalidTypeHint" />
    </rule>

	<!-- Disable rule for file comment. -->
    <rule ref="Squiz.Commenting.FileComment">
        <exclude name="Squiz.Commenting.FileComment.Missing" />
    </rule>

	<!-- Include sniffs for PHP cross-version compatibility. -->
	<config name="testVersion" value="7.4"/>
	<rule ref="PHPCompatibility"/>
</ruleset>
