{
	"name": "pkvillanueva/gunita-plugin",
	"authors": [
		{
			"name": "Gunita",
			"email": "hello@gunita.dev"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.2",
		"phpstan/phpstan": "^1.12",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"php-stubs/wordpress-stubs": "~6.4.3",
		"composer/installers": "^2.3",
		"squizlabs/php_codesniffer": "^3.13",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^9.6",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"scripts": {
		"analyze": "@php ./vendor/bin/phpstan analyze .",
		"lint": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"lint:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload": {
		"psr-4": {
			"GunitaPlugin\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"GunitaPlugin\\Tests\\": "tests/php/"
		}
	}
}
