{
	"name": "gunita-plugin",
	"version": "0.0.1",
	"description": "Welcome to GunitaPlugin, your go-to WordPress plugin boilerplate. Crafted to leverage the latest dev tools in WordPress plugin development, this boilerplate is designed to empower you to create dynamic, feature-rich, and robust plugins with ease. This is not just another boilerplate; it's your head start in the competitive WordPress plugin development landscape.",
	"author": {
		"name": "Gunita",
		"email": "hello@gunita.dev"
	},
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"plugin"
	],
	"homepage": "https://github.com/pkvillanueva/gunita-plugin",
	"repository": {
		"type": "git",
		"url": "https://github.com/pkvillanueva/gunita-plugin.git"
	},
	"bugs": {
		"url": "https://github.com/pkvillanueva/gunita-plugin/issues",
		"email": "hello@gunita.dev"
	},
	"packageManager": "pnpm@10.22.0",
	"dependencies": {
		"wp-prettier": "^3.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/react": "^19.2.6",
		"@types/react-dom": "^19.2.3",
		"@wordpress/env": "^10.35.0",
		"@wordpress/eslint-plugin": "^22.21.0",
		"@wordpress/prettier-config": "^4.35.0",
		"@wordpress/scripts": "^31.0.0",
		"@wordpress/stylelint-config": "^23.27.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "npm:wp-prettier@^3.0.3",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"env:start": "wp-env start",
		"env:stop": "wp-env stop",
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"format": "pnpm run format:js && pnpm run format:php",
		"format:js": "wp-scripts format",
		"format:php": "composer lint:fix",
		"lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:pkg-json && pnpm run lint:php",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "composer lint",
		"test:js": "wp-scripts test-unit-js",
		"test:js:watch": "wp-scripts test-unit-js --watch",
		"test:php": "wp-env run tests-cli --env-cwd=\"wp-content/plugins/$(basename \"$PWD\")\" vendor/bin/phpunit",
		"test": "pnpm run test:js && pnpm run test:php",
		"plugin-zip": "wp-scripts plugin-zip",
		"prepare": "husky"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"wp-scripts format"
		],
		"*.php": [
			"composer lint:fix"
		],
		"package.json": [
			"wp-scripts lint-pkg-json"
		]
	}
}
